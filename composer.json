{
    "name": "youhey/codeigniter-app-sample",
    "description" : "The CodeIgniter Application with Composer",
    "license": "proprietary",

    "require": {
        "php": ">=7.3.0",
        "codeigniter/framework": "3.1.*",
        "chriskacerguis/codeigniter-restserver": "^3.0"
    },
    "require-dev": {
        "mikey179/vfsstream": "1.1.*",
        "phpunit/phpunit": "^5.0",
        "phpmd/phpmd": "^2.7",
        "squizlabs/php_codesniffer": "^3.4",
        "kenjis/ci-phpunit-test": "^0.17.0"
    },
    "scripts": {
        "test": [
            "@phpunit"
        ],
        "phpunit": "php vendor/bin/phpunit --verbose -c application/tests/",
        "phpcs": "php vendor/bin/phpcs",
        "phpmd": "php vendor/bin/phpmd src text cleancode,codesize,controversial,design,naming,unusedcode"
    }
}
